@model WebApplication1.Models.Student

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Student</h2>
            <hr />
        </div>

        <!-- Hidden Id field -->
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Firstname"></label>
            <input asp-for="Firstname" class="form-control" />
            <span asp-validation-for="Firstname" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Lastname"></label>
            <input asp-for="Lastname" class="form-control" />
            <span asp-validation-for="Lastname" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Course"></label>
            <input asp-for="Course" class="form-control" />
            <span asp-validation-for="Course" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DateCreated"></label>
            <input asp-for="DateCreated" class="form-control" type="date" />
            <span asp-validation-for="DateCreated" class="text-danger"></span>
        </div>

        <br />

        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-primary" />
            <a asp-controller="Student" asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
