@model IEnumerable<WebApplication1.Models.Reservation>
@{
    ViewData["Title"] = "Reservation Admin";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">Reservation List</h1>
    </div>

    <div class="table-responsive">
        <table class="table table-hover text-white">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Organization</th>
                    <th>Activity Title</th>
                    <th>Date Needed</th>
                    <th>Time From</th>
                    <th>Time To</th>
                    <th>Participants</th>
                    <th>Date</th>
                    <th>Speaker</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @{ int counter = 1; }
                @foreach (var r in Model)
                {
                    <tr>
                        <td>@(counter++)</td>
                        <td>@r.Organization</td>
                        <td>@r.ActTitle</td>
                        <td>@r.DateNeeded.ToString("MM/dd/yyyy")</td>
                        <td>@r.TimeFrom.ToString("hh:mm tt")</td>
                        <td>@r.TimeTo.ToString("hh:mm tt")</td>
                        <td>@r.Participants</td>
                        <td>@r.Date.ToString("MM/dd/yyyy")</td>
                        <td>@r.Speaker</td>
                        <td>
                            @{
                                var status = r.Approved == null ? "Pending" : r.Approved == true ? "Approved" : "Rejected";
                            }
                            <span class="@(status == "Approved" ? "text-success" : status == "Rejected" ? "text-danger" : "text-warning")">
                                @status
                            </span>
                            @if (!string.IsNullOrEmpty(r.Approver))
                            {
                                <br /><small class="text-muted">by @r.Approver</small>
                            }
                        </td>
                        <td style="white-space:nowrap;">
                            @if (r.Approved != true)
                            {
                                <form asp-action="Approve" method="post" style="display:inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@r.Id" />
                                    <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                </form>
                            }

                            <form asp-action="Delete" method="post" style="display:inline" onsubmit="return confirm('Are you sure you want to delete this reservation?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@r.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <nav aria-label="Page navigation" class="d-flex justify-content-center mt-3">
        <ul class="pagination">
            @if (ViewBag.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link admin-page-link" href="@Url.Action("AdminList", "Reservation", new { page = ViewBag.CurrentPage - 1 })">&laquo;</a>
                </li>
            }
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link admin-page-link" href="@Url.Action("AdminList", "Reservation", new { page = i })">@i</a>
                </li>
            }
            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link admin-page-link" href="@Url.Action("AdminList", "Reservation", new { page = ViewBag.CurrentPage + 1 })">&raquo;</a>
                </li>
            }
        </ul>
    </nav>

</div>